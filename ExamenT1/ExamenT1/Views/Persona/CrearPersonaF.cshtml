<h1>Crear Persona</h1><form action="/Persona/CrearPersona" method="post">    <label>Nombre</label>    <input name="Nombre" pattern="[a-zA-Z ]{2,254}" title="Debe escribir mas de 2 caracteres y solo caracteres" required />    <br />    <label>Apellido</label>    <input name="Apellido" pattern="[a-zA-Z ]{2,254}" title="Debe escribir mas de 2 caracteres y solo caracteres" required />    <br />    <label>FechaNacimiento</label>    <input type="date" id="start" name="FechaNacimiento" min="1955-01-01" max="2002-12-31" title="Desbes ser mayor de 18 o menor de 65 años" required />    <br />    <label>Dni</label>    <input name="Dni" pattern="[0-9]{8}" title="Tiene que tener 8 digitos" required />    <br />    <label>Genero</label>    <select name="Genero">        <option name=""> Elija su Genero</option>        @foreach (var item in ViewBag.Genero)        {<option value="@item"> @item</option>}    </select>    <br />    <label>Ciudad</label>    <select name="Ciudad">        <option name="">Elija su Ciudad </option>        @foreach (var item in ViewBag.Ciudades)        {<option value="@item.Nombre"> @item.Nombre</option>}    </select>    <label>Direccion</label>    <input name="Direccion" minlength="5" maxlength="50" title="Tiene que tener 5 caracteres hasta 50" required />    <br />    <label>Correo</label>    <input name="Correo" type="email" required />    <br />    <label>UserName</label>    <input name="Username" pattern="[a-z0-9]+" title="solo Numeros y letras minusculas" required />    <br />    <label>Contraseña</label>    <input name="Password" type="password" pattern="(?=.*\d)(?=.*[a-zA-Z]).{6,}" title="minimo 6 caracteres, minimo 1 letra y minimo 1 numero" required />    <br />    <button>Guardar</button></form>