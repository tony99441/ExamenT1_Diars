<h1>Editar Persona</h1><form action="/Persona/EditarPersona" method="post">    <input name="Id" value="@ViewBag.EditarPersona.Id" type="hidden" />    <label>Nombre</label>    <input name="Nombre" value="@ViewBag.EditarPersona.Nombre" />    <br>    <label>Apellido</label>    <input name="Apellido" value="@ViewBag.EditarPersona.Apellido" />    <br>    <label>FechaNacimiento</label>    <input name="FechaNacimiento" type="date" value="@ViewBag.EditarPersona.FechaNacimiento" />    <br>    <label>Nombre</label>    <input name="Dni" value="@ViewBag.EditarPersona.Dni" />    <br>    <label>Genero</label>    <select name="Genero">        <option name="">Elija su genero</option>        @foreach (var item in ViewBag.Genero)        {<option value="@item"> @item</option>}        <br>    </select>    <label>Ciudad</label>    <select name="Ciudad">        <option name="">Elija su genero</option>        @foreach (var item in ViewBag.Ciudades)        {<option value="@item.Nombre"> @item.Nombre</option>}    </select>    <br>    <label>Direccion</label>    <input name="Direccion" value="@ViewBag.EditarPersona.Direccion" />    <br>    <label>Correo</label>    <input name="Correo" value="@ViewBag.EditarPersona.Correo" />    <br>    <label>Username</label>    <input name="Username" value="@ViewBag.EditarPersona.Username" />    <br>    <label>Contraseña</label>    <input name="Password" type="password" value="@ViewBag.EditarPersona.Password" />    <br>    <button>Guardar</button></form>